---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				padding-top: 5rem;
			}

			h1 {
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Darien Lombardi</h1>
			<p>
				Building systems that scale. Writing about technology, architecture, and the craft of software engineering.
			</p>
			<p>
				<a href="/blog">Read the blog</a> or <a href="/about">learn more about me</a>.
			</p>
		</main>
		<Footer />
	</body>
</html>
